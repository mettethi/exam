@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <hr />
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Login"))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="emailTxt">Email</label><br />

                        <input id="emailTxt" type="email" name="email" class="form-control" placeholder="Email" />
                    
                </div>
                <div class="form-group">
                    <label for="passwordTxt">Password</label><br />
                   
                        <input id="passwordTxt" type="password" name="password" class="form-control" placeholder="Password" />
                   
                </div>

                <div class="form-group">
                    
                        <input type="submit" value="Log in" class="btn btn-default" />
                    
                </div>
            }
        </section>
    </div>

</div>

