<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                @Html.ActionLink("TEACHER", "Index", "Teachers", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Assignment", "Index", "Assignments")</li>
                    <li>@Html.ActionLink("Helplist", "Index", "Helplists")</li>
                    <li>@Html.ActionLink("Statistic", "Index", "Statistic")</li>
                    <li>@Html.ActionLink("Student", "Index", "Teachers")</li>
                    <li id="logoutBtn">@Html.ActionLink("Logout", "Login", "Login")</li>
                </ul>
                <!-- Partial._LoginPartial will show the login and register in right corner -->
                @*@Html.Partial("_LoginPartial")*@
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KEA School Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
 

    <!-- Jeg har tilføjet disse -->

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Should this be mandatory for each view - true or false. If it is true, i HAVE to implement to section in every view -->
    @RenderSection("scripts", false)
</body>
</html>
